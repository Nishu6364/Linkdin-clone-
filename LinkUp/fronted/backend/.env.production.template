# Environment variables for LinkUp Backend Production

# Database Configuration
MONGODB_URI=your_mongodb_connection_string

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure

# Environment
NODE_ENVIRONMENT=production
NODE_ENV=production

# Email Configuration (Gmail)
# IMPORTANT: Use App-Specific Password, not regular Gmail password
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_character_app_password

# Frontend URL (CRITICAL for password reset links)
FRONTEND_URL=https://your-frontend-domain.com

# Cloudinary Configuration (if using image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Port (usually set by hosting provider)
PORT=4000
